<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SignupActivity">
  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="135dp"
      android:layout_height="43dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="36dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/logo" />

  <TextView
      android:id="@+id/name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      android:layout_marginTop="12dp"
      android:text="Create a noon account"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView3" />

  <TextView
      android:id="@+id/textView7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      android:layout_marginTop="12dp"
      android:text="First Name"
      android:textSize="14sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/name" />

  <TextView
      android:id="@+id/textView8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      android:layout_marginTop="96dp"
      android:text="Last Name"
      android:textSize="14sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/name" />

  <TextView
      android:id="@+id/textView9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      android:layout_marginTop="16dp"
      android:text="Email"
      android:textSize="14sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/name2" />

  <TextView
      android:id="@+id/textView10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      android:layout_marginTop="16dp"
      android:text="Password"
      android:textSize="14sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/email" />

  <EditText
      android:id="@+id/name1"
      android:layout_width="341dp"
      android:layout_height="46dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="36dp"
      android:ems="10"
      android:hint="Please Enter Your First Name"
      android:inputType="textPersonName|text"
      android:textColor="#878383"
      android:textColorHint="#9F9B9B"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/name" />

  <EditText
      android:id="@+id/email"
      android:layout_width="341dp"
      android:layout_height="46dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="44dp"
      android:ems="10"
      android:hint="Please Enter Your Email"
      android:inputType="textEmailAddress"
      android:textColor="#878383"
      android:textColorHint="#9F9B9B"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/name2" />

  <EditText
      android:id="@+id/password"
      android:layout_width="341dp"
      android:layout_height="46dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="44dp"
      android:ems="10"
      android:hint="Please Enter Your Password"
      android:inputType="numberPassword"
      android:textColor="#878383"
      android:textColorHint="#9F9B9B"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/email" />

  <EditText
      android:id="@+id/name2"
      android:layout_width="341dp"
      android:layout_height="46dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="44dp"
      android:ems="10"
      android:hint="Please Enter Your Last Name"
      android:inputType="textPersonName"
      android:textColor="#878383"
      android:textColorHint="#9F9B9B"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/name1" />

  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="25dp"
      android:layout_height="19dp"
      android:layout_marginTop="12dp"
      android:layout_marginEnd="4dp"
      app:layout_constraintEnd_toEndOf="@+id/password"
      app:layout_constraintTop_toTopOf="@+id/password"
      app:srcCompat="@drawable/eys" />

  <Button
      android:id="@+id/bt3"
      android:layout_width="336dp"
      android:layout_height="53dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="40dp"
      android:text="Sign  Up"
      android:textSize="18sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/password" />

  <TextView
      android:id="@+id/textView11"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      android:layout_marginTop="32dp"
      android:text="already have an account?"
      android:textSize="18sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/bt3" />

  <TextView
      android:id="@+id/textView12"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginTop="32dp"
      android:text="Sign In"
      android:textColor="#FFFFFF"
      app:layout_constraintStart_toEndOf="@+id/textView11"
      app:layout_constraintTop_toBottomOf="@+id/bt3" />

  </androidx.constraintlayout.widget.ConstraintLayout>